!!!
%html
%head
	%title Share_app
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	= csrf_meta_tags
	%link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}

%body
	.nav.navbar-fixed-top
		.nav-inner
			.container
				- if user_signed_in?
					.btn.btn-navbar= link_to current_user.name, edit_user_registration_path
					.btn.btn-navbar= link_to 'Add New Article', new_article_path
					.btn.btn-navbar= link_to 'Log Out', destroy_user_session_path, method: :delete
				- else
					.btn.btn-navbar= link_to 'Log In', new_user_session_path
					.btn.btn-navbar= link_to "Sign Up", new_user_registration_path
	%p.notice= notice
	%p.alert= alert

	.wrapper
		=yield